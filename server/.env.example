# Server
PORT=3000
NODE_ENV=production
DOMAIN=moltboard.art

# Redis (Upstash or Railway Redis)
# Get from Railway: railway add redis
REDIS_URL=redis://default:xxx@xxx.upstash.io:6379

# PostgreSQL (Railway or Neon)
# Get from Railway: railway add postgres
DATABASE_URL=postgresql://user:pass@host:5432/railway

# Cloudflare R2 (S3-compatible storage for archives)
# Create a bucket at dash.cloudflare.com > R2
S3_ENDPOINT=https://xxx.r2.cloudflarestorage.com
S3_ACCESS_KEY_ID=xxx
S3_SECRET_ACCESS_KEY=xxx
S3_BUCKET=moltboard-archives
S3_REGION=auto
